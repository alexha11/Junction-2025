# LLM/Featherless API Configuration
# These credentials are used for generating explanations and strategic plans
# Get your API credentials from: https://featherless.ai (or your LLM provider)
FEATHERLESS_API_BASE=https://api.featherless.ai/v1
FEATHERLESS_API_KEY=your_api_key_here
LLM_MODEL=llama-3.1-8b-instruct

# Backend Configuration
LOG_LEVEL=INFO
OPTIMIZER_INTERVAL_MINUTES=15
BACKEND_PORT=8000

# Agent URLs (for local development)
WEATHER_AGENT_URL=http://localhost:8101
PRICE_AGENT_URL=http://localhost:8102
OPTIMIZER_AGENT_URL=http://localhost:8105

# Digital Twin Configuration
OPCUA_SERVER_URL=opc.tcp://opcua.flowoptimization.app:4840/wastewater/
DIGITAL_TWIN_MCP_URL=https://mcp.flowoptimization.app/sse

# Frontend Configuration
FRONTEND_PORT=5173
VITE_WEATHER_AGENT_URL=http://localhost:8000/weather/forecast

# Port Configuration
WEATHER_AGENT_PORT=8101
PRICE_AGENT_PORT=8102
OPTIMIZER_AGENT_PORT=8105
OPCUA_PORT=4840
MCP_PORT=8080

# Database Configuration (if using PostgreSQL)
POSTGRES_PORT=5432
POSTGRES_DB=hsy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/hsy

# External API Keys (optional)
OPENWEATHER_API_KEY=your_openweather_api_key_here
USE_OPENWEATHER=false
USE_NORD_POOL=false
